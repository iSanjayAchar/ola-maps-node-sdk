{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"rootDir": ".",
		"baseUrl": ".",
		"resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": [
		".eslintrc.js",
		"src",
		"__tests__",
		"jest.config.js",
	],
	"exclude": [
		"node_modules", 
		"dist",
		"*/**/*.d.ts",
		"coverage/**"
	]
}
