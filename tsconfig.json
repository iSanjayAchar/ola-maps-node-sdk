{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"rootDir": ".",
		"baseUrl": ".",
		"resolveJsonModule": true
	},
	"compileOnSave": true,
	"include": [
		"src",
		"__tests__"
	],
	"exclude": ["node_modules", "dist"]
}
